Options -MultiViews

# Angular tem prioridade na raiz
DirectoryIndex index.html index.php

RewriteEngine On

# 1. Arquivos e pastas que existem fisicamente (wp-content, wp-includes, etc.)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2. WordPress REST API e rotas dinâmicas → roteadas pelo index.php do WordPress
RewriteCond %{REQUEST_URI} ^/wp-json [NC,OR]
RewriteCond %{REQUEST_URI} ^/wp-admin [NC,OR]
RewriteCond %{REQUEST_URI} ^/wp-login\.php [NC,OR]
RewriteCond %{REQUEST_URI} ^/wp-cron\.php [NC]
RewriteRule ^ index.php [L]

# 3. Tudo mais → Angular SPA
RewriteRule ^ index.html [QSA,L]
