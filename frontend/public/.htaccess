Options -MultiViews

# Angular tem prioridade: index.html antes de index.php
DirectoryIndex index.html index.php

RewriteEngine On

# Deixa WordPress acess√≠vel (admin, API REST, assets)
RewriteCond %{REQUEST_URI} ^/wp-admin [NC,OR]
RewriteCond %{REQUEST_URI} ^/wp-login [NC,OR]
RewriteCond %{REQUEST_URI} ^/wp-content [NC,OR]
RewriteCond %{REQUEST_URI} ^/wp-includes [NC,OR]
RewriteCond %{REQUEST_URI} ^/wp-json [NC,OR]
RewriteCond %{REQUEST_URI} ^/wp-cron [NC]
RewriteRule ^ - [L]

# Redireciona tudo mais para index.html (SPA Angular)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [QSA,L]
